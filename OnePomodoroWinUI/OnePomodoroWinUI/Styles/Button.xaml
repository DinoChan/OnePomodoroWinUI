<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:OnePomodoro.Controls">

    <Style TargetType="Button" x:Key="EllipseButtonRevealStyle" BasedOn="{StaticResource ButtonRevealStyle}">
        <Setter Property="CornerRadius" Value="100"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style TargetType="Button"
           x:Key="TitleBarButton"
           BasedOn="{StaticResource NavigationBackButtonSmallStyle}">
        <Setter Property="FontSize"
                Value="12" />
        <Setter Property="Width"
                Value="48" />
    </Style>

    <Style TargetType="controls:PomodoroStateButton" x:Key="SmallButton">
        <Setter Property="Height" Value="24"/>
        <Setter Property="Width" Value="24"/>
    </Style>

    <Style TargetType="controls:PomodoroStateButton" x:Key="LargeButton">
        <Setter Property="Height" Value="96"/>
        <Setter Property="Width" Value="96"/>
    </Style>

    <Style TargetType="controls:PomodoroStateButton" x:Key="HugeButton">
        <Setter Property="Height" Value="192"/>
        <Setter Property="Width" Value="192"/>
    </Style>
</ResourceDictionary>
